#include <SPI.h>
#include <nRF24L01.h>
#include <RF24.h>
#include <printf.h> // Essential for printDetails on Arduino

// Adjust pins: CE, CSN. 
// Common Nano wiring: CE -> D9, CSN -> D10
RF24 radio(9, 10); 

void setup() {
  Serial.begin(115200);
  printf_begin(); // Initialize printf
  
  if (!radio.begin()) {
    Serial.println(F("Radio hardware not responding!"));
    while (1) {} // Hold here on failure
  }

  // Set a standard configuration
  radio.setPALevel(RF24_PA_LOW);
  
  // THIS IS THE KEY COMMAND
  radio.printDetails(); 
}

void loop() {
  // Nothing needed here for this test
}

/* sample correct table looking
EN_RXADDR	= 0x03
RF_CH		= 0x4c
RF_SETUP	= 0x03
CONFIG		= 0x0e
DYNPD/FEATURE	= 0x00 0x00
Data Rate	= 1 MBPS
Model		= nRF24L01+
CRC Length	= 16 bits
PA Power	= PA_LOW
ARC		= 0
*/
